

import pygame

pygame.init()

# Obtenir la taille de l'écran
info = pygame.display.Info()
screen_width = info.current_w
screen_height = info.current_h



xcrew = 1000
ycrew = 1000
# Créer une fenêtre en plein écran
screen = pygame.display.set_mode((screen_width, screen_height), pygame.FULLSCREEN)




clock = pygame.time.Clock()
running = True
dt = 0

player_pos = pygame.Vector2(screen.get_width() / 2, screen.get_height() / 2)

while running:
    # poll for events
    # pygame.QUIT event means the user clicked X to close your window
    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            running = False

    # fill the screen with a color to wipe away anything from last frame
    screen.fill((0,0,0))
    pygame.draw.rect(screen, (100,100,200) , (screen_width - 800 ,screen_height - 400,800,400))
    pygame.draw.rect(screen, (20,20,20) , (xcrew,ycrew,21,21))

    keys = pygame.key.get_pressed()
    if keys[pygame.K_s] and screen_height > ycrew + 21:
        ycrew = ycrew + 5
    if keys[pygame.K_z] and screen_height - 400 < ycrew:
        ycrew = ycrew - 2
    if keys[pygame.K_d] and screen_width > xcrew + 21:
        xcrew = xcrew + 5
    if keys[pygame.K_q] and screen_width - 800 < xcrew :
        xcrew = xcrew - 5
    if not(keys[pygame.K_z]) and screen_height > ycrew + 21:
        ycrew = ycrew + 5
    # flip() the display to put your work on screen
    pygame.display.flip()

    # limits FPS to 60
    # dt is delta time in seconds since last frame, used for framerate-
    # independent physics.
    dt = clock.tick(60) / 1000

pygame.quit()
